    "def P(n,x):\n",
    "    if n == 0:\n",
    "        return 1\n",
    "    if n == 1:\n",
    "        return x\n",
    "    else:\n",
    "        return ((2*(n-1)+1)*x*P(n-1,x)-(n-1)*P(n-2,x))/n\n",
    "print(P(16,0.5))\n",
    "print(P(32,0.7))"
   ]
  }
